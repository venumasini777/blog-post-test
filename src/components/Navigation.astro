---
import { Image } from 'astro:assets';
import myImage from '../assets/logo.png';
---
<header class="header">
    <div class="header__left">
        <div class="thumbnail">
            <Image src={myImage} alt="Thumbnail" width="30" height="30" />
        </div>
      <h1 class="header__logo"><a href="/">Blog</a></h1>
    </div>
    <nav class="header__nav">
      <ul class="nav__list">
        <li><a href="/stablecoins" class="nav-item">Stable Coins</a></li>
        <li><a href="/rwas">RWAs</a></li>
        <li><a href="/buying">Buying</a></li>
        <li><a href="/staking">Staking</a></li>
        <li><a href="/integrations">Integrations</a></li>
        <li><a href="#" class="subscribe-btn">Subscribe</a></li>
      </ul>
    </nav>
  </header>

<style>
  .header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding:0 120px 0 120px;
    max-width: 100%;
    box-shadow: 0px 0px 1px 0px rgba(12, 26, 75, 0.24), 0px 3px 8px -1px rgba(50, 50, 71, 0.05);
  }

  .header__left {
    display: flex;
    flex-direction: row;
  }
  .thumbnail {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-right: 5px;
  }
  a{
    color: black;
    text-decoration: none;
    margin-right: 40px;
  }

  .nav__list {
    display: flex;
    list-style: none;
  }
  .nav-item{
    border-bottom: none;
  }
  .nav__list li {
    margin-right: 1rem;
  }
  .nav__list li:last-child {
    margin-right: 0;
  }

  .subscribe-btn {
    background-color: #007bff;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    margin-right: 0;
  }
</style>