---
import { Image } from 'astro:assets';
import myImage from '../assets/thumbNail1.png';
import type { EntryFieldTypes } from 'contentful';
import type { DocumentNode } from '../types/contentful';
interface Props {
	includeTag : boolean;
  title: EntryFieldTypes.Text;
	body: DocumentNode;
  imageURL: string;
}

const { includeTag,title, body, imageURL } = Astro.props;
---

<article>
  <div class="thumbnail">
    <Image src={myImage} alt="Thumbnail" width="360" height="200" />
  </div>
  <div class="content">
    {includeTag && <div class="category">
      <p>Tag/Category</p>
    </div>}
    <div class="heading">
      <p>{title}</p>
    </div>
    <div class="description">    
      <p>{body.content[0].content[0].value}
         </p>
      </div>
  </div>
</article>

<style>
  article {
    display: flex;
    height: 360px;
    flex-direction: column;
  }
  .thumbnail {
    margin-right: 20px;
  }
  .thumbnail img {
    max-width: 100%;
    height: auto;
  }
  .content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 40px;
  }
  .category {
    height: 30px;
    font-size: 14px;
    color: #3CAD71;
  }
  .heading {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0px;
    height: 60px;
    font-size: 20px;
    font-weight: bold;
    max-width: 360px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .description {
    margin: 0px;
    height: 50px;
    max-width: 360px;
    font-size: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  h6{
    margin: 0px;
  }
  p{
    margin: 0px;
  }
</style>
